{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node", "express", "multer", "cors", "xml2js"]
  },
  "include": ["./**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
